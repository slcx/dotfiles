#!/bin/sh

if [ "$1" == "up" ]; then
  amixer set Master 2%+ unmute
elif [ "$1" == "down" ]; then
  amixer set Master 2%- unmute
elif [ "$1" = "toggle" ]; then
  pamixer -t
elif [ "$1" == "i3block" ]; then
  if [ "$(pamixer --get-mute)" == "true" ]; then
    echo mute
    echo mute
    echo '#ff5a52'
  else
    perc="$(pamixer --get-volume)%"
    echo $perc
    echo $perc
  fi
  exit 0
fi

# update i3blocks volume indicator
pkill --signal SIGRTMIN+1 i3blocks
